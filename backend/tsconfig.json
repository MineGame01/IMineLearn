{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@app/*": ["./src/app/*"],
      "@feature/*": ["./src/feature/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
